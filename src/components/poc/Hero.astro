---
const {
  heading,
  text,
  size = "small",
  align = "center",
  video = false,
  image = false,
} = Astro.props;
// Size = "small" / "large"
// Align = "left" / "center"
import Btn from "@/components/global/Btn.astro";
---

<section
  class:list={[
    "relative text-white antialiased",
    { "h-hero": size === "small", "h-screen max-h-[900px]": size === "large" },
  ]}
>
  <div
    class="absolute inset-0 z-20 bg-zinc-900 bg-opacity-75 flex justify-center flex-col"
  >
    <div
      class:list={[
        "container mx-auto flex flex-col",
        { "text-center items-center": align === "center" },
      ]}
    >
      <h1 class="text-2xl md:text-4xl lg:text-7xl font-bold mb-2 max-w-4xl">
        {heading}
      </h1>
      <p class="max-w-2xl text-lg mb-7">{text}</p>
      <p class="max-w-2xl">
        <a
          href="#"
          class="font-bold underline underline-offset-4 hover:no-underline"
          >LÃ¤s mer</a
        >
      </p>
    </div>
  </div>
  {
    image && !video && (
      <img src={image} alt="Golf image" class="w-full h-full object-cover" />
    )
  }
  {
    video && (
      <video class="w-full h-full object-cover" playsinline autoplay muted loop>
        <source src={video} type="video/mp4" />
      </video>
    )
  }
</section>
