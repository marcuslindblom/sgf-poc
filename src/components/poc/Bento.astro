    text: "Maecenas sed diam eget risus varius blandit sit amet non magna.",
  },
  {
    title: "Bento grid",
    text: "Maecenas sed diam eget risus varius blandit sit amet non magna.",
  },
];
---

<section class="my-16 md:my-20 lg:my-28">
  <div class="container">
    <div class="w-full grid grid-cols-12 auto-rows-max gap-5 row-span">
      {
        fakeItems.map((item, index) => (
          <div
            class:list={[
              itemClass,
              {
                "lg:col-span-6":
                  (style === 1 && [3, 4].includes(index)) ||
                  (style === 2 && index > 3) ||
                  (style === 4 && [2, 3].includes(index)),
                "lg:col-span-8":
                  (style === 2 && [1, 2].includes(index)) ||
                  (style === 3 && index === 0),
                "lg:row-span-2": style === 3 && index === 1,
                "lg:col-span-3": style === 4 && [0, 1, 4, 5].includes(index),
                "lg:col-span-4":
                  (style === 3 && index > 0) ||
                  (style === 2 && [0, 3].includes(index)) ||
                  (style === 1 && index < 3),
              },
            ]}
          >
            <h3 class="text-2xl font-bold mb-3">{item.title}</h3>
            <p>{item.text}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
