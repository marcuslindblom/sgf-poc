---
import store from '@/store/index';
import BaseLayout from "@/layouts/BaseLayout.astro";

const pageTitle = "Tag Index";

const session = store.openSession();

// Get all labels
const labels = await session.query({ collection: 'labels'}).all();
---

<BaseLayout pageTitle={pageTitle}>
  <section>
    <div class="px-8 md:px-12 mx-auto max-w-7xl py-12 lg:px-32">
      <ol role="list" class="flex flex-col space-y-2 mt-6">
        {labels.map((tag) => (
          <li >
            <a class="text-4xl tracking-tight text-balance font-medium font-display text-black md:text-6xl hover:text-blue-500" href={`/tags/${tag.name}`}>{tag.name}</a>
          </li>
        ))}
      </ol>
    </div>
  </section>
</BaseLayout>
